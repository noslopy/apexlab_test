{
  "name": "beconnected",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "sst:start": "sst dev",
    "sst:start:wait-on-ngrok": "npx wait-on http://127.0.0.1:4040/inspect/http && sst dev",
    "ngrok:start": "npx ts-node --esm scripts/start-ngrok.ts",
    "frontend:start": "cd frontend && pnpm dev",
    "build": "sst build",
    "deploy": "sst deploy",
    "remove": "sst remove",
    "console": "sst console",
    "typecheck": "tsc --noEmit",
    "pretest": "npm run lint",
    "test": "sst load-config -- vitest run",
    "posttest": "npm run format",
    "test-watch": "sst load-config -- vitest watch",
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "aws-cdk-lib": "^2.95.1",
    "constructs": "^10.2.70",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "got": "^12.6.1",
    "husky": "^8.0.3",
    "hygen": "6.2.11",
    "lint-staged": "^13.3.0",
    "ngrok": "^4.3.3",
    "prettier": "^3.0.3",
    "sst": "^2.25.0",
    "typescript": "~5.1.0",
    "vitest": "^0.22.1"
  },
  "dependencies": {
    "@slack/bolt": "^3.13.3",
    "@tsconfig/node18": "^18.2.2",
    "axios": "^0.27.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
